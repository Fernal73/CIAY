#!/usr/bin/env bash
require() {
  hash "$@" || exit
}
usage() {
  echo "$0 vid doy"
  echo "vid - video id"
  echo "doy - day of year"
  echo "caption - video title"
  exit 1
}
require basename date
#shellcheck disable=SC1091
source ./vidmd.sh
vid="$1"
doy="$2"
./genoverlay "$vid" "$doy"
videourl="https://youtu.be/${vid}"
caption="$3"
md="$(./genvidthmd "$vid" "$videourl" "$caption" "$doy")"
month="$(mfromdoy "$doy")"
fname="${month}/Day$(printf "%03d" "$doy").md"
formatdt="$(date '+%B %d, %Y')"
echo "# $formatdt" >|"$fname"
{
  echo "---"
  echo
  echo "$md"
} >>"$fname"

basename -- "$fname" >>"${month}/compact.txt"
./compact "$month" >|"$(date '+%B%Y.md')"
echo "$vid" >>videos.txt
